<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">


    <TextView
        android:id="@+id/pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        android:text="Pilihan Ganda"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/pertanyaan"
        android:gravity="center"
        android:text="Pertanyaan"
        android:textSize="12dp" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/minibuttonstyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/minibuttonstyle"
        android:id="@+id/btnFinish"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Prev"
        android:background="@drawable/minibuttonstyle"
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/btnNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option4"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        android:layout_above="@id/option3" />
    <Button
        android:id="@+id/option1"
        android:textColor="#fff"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/option2" />
    <Button
        android:background="@drawable/minibuttonstyle"
        android:id="@+id/btnAsk"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Ask Friend"
        android:layout_alignBaseline="@+id/btn5050"
        android:layout_alignBottom="@+id/btn5050"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn5050"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/minibuttonstyle"
        android:text="50:50"
        android:layout_above="@+id/btnPrev"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

</RelativeLayout>